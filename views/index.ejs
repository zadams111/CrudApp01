<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if (users != '') { %>
                    <table class="table table-striped my-3">
                        <thead>
                            <tr class="table-light text-center">
                              <th>ID</th>  
                              <th>Image</th>  
                              <th>User Name</th>  
                              <th>Email</th>  
                              <th>Phone</th>
                              <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user, index) => { %>
                                <tr class="text-center align-middle">
                                    <td><%= index %></td>
                                    <td><img src="/uploads/<%= user.profile_picture %>" width="50" height="50" class="img_thumbnail"></td>
                                    <td><%= user.user_name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.phone_number %></td>
                                    <td>
                                        <a href="/edit/<%= user.user_id %>" class="text-secondary"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= user.user_id %>" class="text-secondary"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                                                    
                                    </td>
                                </tr>

                              <% }); %>
    
                        </tbody>
    
                    </table>
                <% } else { %>

                    <h1 class="text-center text-secondary mt-5">No Users Found</h1>

                <% } %>


            </div>
        </div>
    </div>
</div>



<%- include('layout/footer') %>